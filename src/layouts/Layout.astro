---
import ThemeToggle from '../components/ThemeToggle.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Neto Costa", 
  description = "Neto Costa - Engenheiro de Software" 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="assets/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@300;400;500&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Theme initialization script (prevents FOUC) -->
    <script is:inline>
      (function() {
        function getThemePreference() {
          if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
            return localStorage.getItem('theme');
          }
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }

        const theme = getThemePreference();
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  
  <body>
    <!-- Navigation -->
    <header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
      <div class="container flex h-14 items-center max-w-6xl mx-auto px-4">
        <!-- Logo -->
        <div class="mr-4 flex">
          <a href="/" class="mr-6 flex items-center space-x-2">
            <span class="font-bold text-xl">Neto Costa</span>
          </a>
        </div>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex flex-1 items-center justify-between space-x-2 md:justify-end">
          <nav class="flex items-center space-x-6 text-sm font-medium">
            <a 
              href="/" 
              class="transition-colors hover:text-foreground/80 text-foreground"
            >
              Home
            </a>
            <a 
              href="/blog" 
              class="transition-colors hover:text-foreground/80 text-foreground/60"
            >
              Blog
            </a>
            <a 
              href="/projetos" 
              class="transition-colors hover:text-foreground/80 text-foreground/60"
            >
              Projetos
            </a>
            <a 
              href="/resume" 
              class="transition-colors hover:text-foreground/80 text-foreground/60"
            >
              Resume
            </a>
          </nav>
          <div class="flex items-center space-x-2 ml-2">
            <ThemeToggle />
          </div>
        </div>

        <div class="md:hidden flex self-center ml-auto">
          <div class="flex items-center space-x-2 ml-2">
            <ThemeToggle />
          </div>
          <!-- Mobile Navigation Button -->
          <button 
            id="mobile-menu-toggle"
            class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 w-9 md:hidden"
            aria-label="Toggle Menu"
          >
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Navigation Menu -->
      <div id="mobile-menu" class="hidden border-t bg-background px-4 py-4 md:hidden">
        <nav class="flex flex-col space-y-3">
          <a 
            href="/" 
            class="block px-3 py-2 text-base font-medium text-foreground hover:bg-accent hover:text-accent-foreground rounded-md"
          >
            Home
          </a>
          <a 
            href="/blog" 
            class="block px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground rounded-md"
          >
            Blog
          </a>
          <a 
            href="/projetos" 
            class="block px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground rounded-md"
          >
            Projetos
          </a>
          <a 
            href="/resume" 
            class="block px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground rounded-md"
          >
            Resume
          </a>
        </nav>
      </div>
    </header>
    
    <!-- Main Content -->
    <main>
      <slot />
    </main>
    
    <!-- Footer -->
    <footer class="border-t bg-background py-12">
      <div class="container max-w-6xl mx-auto px-4">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
          <!-- About -->
          <div class="md:col-span-2">
            <h3 class="text-lg font-semibold mb-4">Sobre</h3>
            <p class="text-sm text-muted-foreground leading-relaxed">
              Engenheiro de Software apaixonado por aprender cada vez mais e colaborar com projetos inovadores.
              Este site foi construído com Astro, Tailwind CSS e hospedado na Vercel.
            </p>
          </div>
          
          <!-- Quick Links -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Links</h3>
            <ul class="space-y-2 text-sm">
              <li>
                <a href="/" class="text-muted-foreground hover:text-foreground transition-colors">Home</a>
              </li>
              <li>
                <a href="/blog" class="text-muted-foreground hover:text-foreground transition-colors">Blog</a>
              </li>
              <li>
                <a href="/projetos" class="text-muted-foreground hover:text-foreground transition-colors">Projetos</a>
              </li>
              <li>
                <a href="/resume" class="text-muted-foreground hover:text-foreground transition-colors">Resume</a>
              </li>
            </ul>
          </div>
          
          <!-- Social -->
